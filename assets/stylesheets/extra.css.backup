/* === FUTURISTIC LOADING ANIMATION === */

/* Loading overlay */
.tquant-loader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #0a0a1a 0%, #1a1a3a 50%, #0a0a1a 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 99999;
  opacity: 1;
  transition: opacity 0.8s ease-out, visibility 0.8s ease-out;
}

.tquant-loader.fade-out {
  opacity: 0;
  visibility: hidden;
}

/* Cyber grid background */
.tquant-loader::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
  background-size: 50px 50px;
  animation: gridMove 20s linear infinite;
}

@keyframes gridMove {
  0% { transform: perspective(500px) rotateX(60deg) translateY(0); }
  100% { transform: perspective(500px) rotateX(60deg) translateY(50px); }
}

/* Main logo container */
.loader-logo-container {
  position: relative;
  width: 200px;
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Rotating rings */
.loader-ring {
  position: absolute;
  border-radius: 50%;
  border: 2px solid transparent;
}

.loader-ring-1 {
  width: 180px;
  height: 180px;
  border-top-color: #00ffff;
  border-right-color: #00ffff;
  animation: spin 2s linear infinite;
  box-shadow: 0 0 20px rgba(0, 255, 255, 0.5), inset 0 0 20px rgba(0, 255, 255, 0.1);
}

.loader-ring-2 {
  width: 150px;
  height: 150px;
  border-bottom-color: #ff00ff;
  border-left-color: #ff00ff;
  animation: spin 1.5s linear infinite reverse;
  box-shadow: 0 0 20px rgba(255, 0, 255, 0.5), inset 0 0 20px rgba(255, 0, 255, 0.1);
}

.loader-ring-3 {
  width: 120px;
  height: 120px;
  border-top-color: #00ff88;
  border-right-color: #00ff88;
  animation: spin 1s linear infinite;
  box-shadow: 0 0 20px rgba(0, 255, 136, 0.5), inset 0 0 20px rgba(0, 255, 136, 0.1);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Center hexagon */
.loader-hexagon {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #00ffff, #00ff88);
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  animation: pulse 1.5s ease-in-out infinite, hexRotate 3s linear infinite;
  box-shadow: 0 0 30px rgba(0, 255, 255, 0.8);
}

/* Center logo image */
.loader-logo-img {
  width: 160px;
  height: auto;
  position: absolute;
  z-index: 10;
  animation: logoPulse 2s ease-in-out infinite;
  filter: drop-shadow(0 0 20px rgba(0, 255, 255, 0.8)) drop-shadow(0 0 40px rgba(255, 0, 255, 0.5));
}

@keyframes logoPulse {
  0%, 100% { 
    transform: scale(1); 
    filter: drop-shadow(0 0 20px rgba(0, 255, 255, 0.8)) drop-shadow(0 0 40px rgba(255, 0, 255, 0.5));
  }
  50% { 
    transform: scale(1.1); 
    filter: drop-shadow(0 0 30px rgba(0, 255, 255, 1)) drop-shadow(0 0 60px rgba(255, 0, 255, 0.8));
  }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

@keyframes hexRotate {
  0% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(180deg) scale(1.1); }
  100% { transform: rotate(360deg) scale(1); }
}

/* Floating particles */
.loader-particles {
  position: absolute;
  width: 300px;
  height: 300px;
}

.particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: #00ffff;
  border-radius: 50%;
  animation: float 3s ease-in-out infinite;
}

.particle:nth-child(1) { left: 10%; top: 20%; animation-delay: 0s; background: #00ffff; }
.particle:nth-child(2) { left: 80%; top: 30%; animation-delay: 0.5s; background: #ff00ff; }
.particle:nth-child(3) { left: 20%; top: 70%; animation-delay: 1s; background: #00ff88; }
.particle:nth-child(4) { left: 70%; top: 80%; animation-delay: 1.5s; background: #ffff00; }
.particle:nth-child(5) { left: 50%; top: 10%; animation-delay: 2s; background: #00ffff; }
.particle:nth-child(6) { left: 90%; top: 60%; animation-delay: 2.5s; background: #ff00ff; }

@keyframes float {
  0%, 100% { transform: translateY(0) scale(1); opacity: 0.5; }
  50% { transform: translateY(-20px) scale(1.5); opacity: 1; }
}

/* Loading text */
.loader-text {
  margin-top: 40px;
  font-family: 'Roboto Mono', monospace;
  font-size: 1.5rem;
  font-weight: 600;
  background: linear-gradient(90deg, #00ffff, #ff00ff, #00ff88, #00ffff);
  background-size: 300% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradientShift 3s ease infinite;
  text-transform: uppercase;
  letter-spacing: 4px;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Progress bar */
.loader-progress {
  margin-top: 30px;
  width: 250px;
  height: 4px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 2px;
  overflow: hidden;
  position: relative;
}

.loader-progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #00ffff, #ff00ff, #00ff88);
  background-size: 200% 100%;
  animation: progressFill 2s ease-out forwards, gradientShift 1s ease infinite;
  border-radius: 2px;
  box-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
}

@keyframes progressFill {
  0% { width: 0%; }
  100% { width: 100%; }
}

/* Glowing dots */
.loader-dots {
  display: flex;
  gap: 8px;
  margin-top: 20px;
}

.loader-dot {
  width: 8px;
  height: 8px;
  background: #00ffff;
  border-radius: 50%;
  animation: dotPulse 1.4s ease-in-out infinite;
}

.loader-dot:nth-child(1) { animation-delay: 0s; }
.loader-dot:nth-child(2) { animation-delay: 0.2s; }
.loader-dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes dotPulse {
  0%, 80%, 100% { transform: scale(0.6); opacity: 0.4; }
  40% { transform: scale(1); opacity: 1; box-shadow: 0 0 15px #00ffff; }
}

/* Scan line effect */
.loader-scanline {
  position: absolute;
  width: 100%;
  height: 4px;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.5), transparent);
  animation: scanline 2s linear infinite;
}

@keyframes scanline {
  0% { top: 0; }
  100% { top: 100%; }
}

