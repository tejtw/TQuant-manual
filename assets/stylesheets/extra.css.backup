}

/* Parameter name (code) styling in API docs */
.md-typeset ul > li > code:first-child {
  background: linear-gradient(135deg, var(--md-primary-fg-color), var(--md-accent-fg-color)) !important;
  color: white !important;
  padding: 0.3em 0.6em;
  border-radius: 4px;
  font-weight: 600;
  font-size: 0.9em;
