/* === API DOCUMENTATION STYLING (Pyfolio/Alphalens) === */

/* Parameters section styling */
.md-typeset strong:contains("Parameters"),
.md-typeset p > strong:first-child {
  display: block;
  color: var(--md-primary-fg-color) !important;
  font-size: 1.1em;
  margin-top: 1.5em;
  margin-bottom: 0.5em;
}

/* Parameter list styling */
.md-typeset ul:has(> li > code:first-child) {
  background: linear-gradient(135deg, rgba(63, 81, 181, 0.03), rgba(63, 81, 181, 0.01));
  border-left: 4px solid var(--md-primary-fg-color);
  border-radius: 0 8px 8px 0;
  padding: 1em 1.5em;
  margin: 1em 0;
  list-style: none;
}

.md-typeset ul:has(> li > code:first-child) > li {
