   ========================================================================== */

/* ==========================================================================
   1. CSS Variables
   ========================================================================== */

:root {
  /* Shadow colors */
  --md-shadow-color-light: rgba(0, 0, 0, 0.2);
  --md-shadow-color-dark: rgba(0, 0, 0, 0.25);

  /* Heading colors - light theme */
  --heading-h1-color: #1a73e86a;
  --heading-h2-color: #004886;
  --heading-h3-color: #003467;
}

[data-md-color-scheme="slate"] {
  --md-shadow-color-light: rgba(255, 255, 255, 0.15);
  --md-shadow-color-dark: rgba(255, 255, 255, 0.25);
  --heading-h1-color: #00e6ea;
  --heading-h2-color: #008bcc;
  --heading-h3-color: #80deea;
}

/* ==========================================================================
   2. Layout & Grid
   ========================================================================== */

.md-main__inner {
  max-width: none !important;
}

.md-content {
  max-width: none !important;
}

.md-content__inner {
  max-width: 1200px !important;
  margin: 0 auto;
  padding: 0 2rem;
}

@media screen and (min-width: 76.25em) {
  .md-grid {
    max-width: none !important;
  }
  
  .md-main__inner {
    display: grid;
    grid-template-columns: 12.1rem minmax(0, 1fr) 15rem;
    gap: 1rem;
  }
  
  .md-sidebar--primary {
    width: 12.1rem;
  }
  
  .md-sidebar--secondary {
    width: 15rem;
  }
}

/* ==========================================================================
   3. Sidebar Styles
   ========================================================================== */

.md-sidebar {
  padding-top: 2.5rem !important;
  top: 3.5rem !important;
  transition: transform 0.3s ease, opacity 0.3s ease, visibility 0.3s ease !important;
}

/* Left sidebar */
.md-sidebar--primary .md-nav__link {
  font-size: 0.68rem;
  line-height: 1.3;
  padding: 0.2rem 0.4rem;
}

.md-sidebar--primary .md-nav__item {
  padding: 0;
  margin: 0;
}

.md-sidebar--primary .md-nav__item--nested > .md-nav__link {
  font-weight: 600;
}

/* Left sidebar title styling - match right sidebar */
.md-nav--primary > .md-nav__title {
  font-size: 0.7rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--md-default-fg-color--light);
  padding: 0.6rem 0.6rem 0.4rem;
  border-bottom: 1px solid var(--md-default-fg-color--lightest);
  margin-bottom: 0.4rem;
}

/* Make homepage link bold */
.md-nav--primary .md-nav__item:first-child > .md-nav__link,
.md-nav--primary .md-nav__link[href="."],
.md-nav--primary .md-nav__link[href="./"],
.md-nav--primary .md-nav__link[href="index.html"] {
  font-weight: 700 !important;
}

/* Prevent auto-expand on sidebar nav */
.md-sidebar--primary .md-nav__toggle:not(:checked) ~ .md-nav {
  display: none;
}

/* Sidebar positioning - move down to avoid header overlap */
.md-sidebar {
  padding-top: 2.5rem !important;
  top: 3.5rem !important;
}

.md-sidebar--primary {
  padding-top: 2.5rem !important;
}

.md-sidebar--secondary {
  padding-top: 2.5rem !important;
}

/* Right sidebar (Table of Contents) - wider and better styled */
.md-sidebar--secondary .md-sidebar__scrollwrap {
  width: 15rem;
}

.md-sidebar--secondary .md-nav__link {
  font-size: 0.68rem;
  line-height: 1.3;
  padding: 0.2rem 0.4rem;
}

.md-sidebar--secondary .md-nav__item {
  padding: 0;
  margin: 0;
}

/* Make TOC more readable */
.md-nav--secondary .md-nav__title {
  font-size: 0.7rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--md-default-fg-color--light);
  padding: 0.6rem 0.6rem 0.4rem;
  border-bottom: 1px solid var(--md-default-fg-color--lightest);
  margin-bottom: 0.4rem;
}

/* === FUTURISTIC THEME TRANSITION EFFECTS === */
body {
  transition: background-color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.md-main,
.md-content,
.md-header {
  transition: background-color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

/* Text color changes should be instant to avoid ghosting */
.md-typeset,
.md-typeset *,
.md-content *,
.md-nav__link,
.md-nav__item {
  transition: none !important;
}

/* Sidebar needs special handling to avoid ghosting during theme transition */
.md-sidebar {
  transition: transform 0.3s ease,
              opacity 0.3s ease,
              visibility 0.3s ease !important;
}

/* Disable color transitions on sidebar to prevent ghosting */
.md-sidebar,
.md-sidebar * {
  transition-property: transform, opacity, visibility !important;
  transition-duration: 0.3s !important;
}

/* Theme transition overlay */
.theme-transition-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at center, transparent 0%, rgba(0, 0, 0, 0.85) 100%);
  opacity: 0;
  pointer-events: none;
  z-index: 9998;
  transition: opacity 0.4s ease;
}

.theme-transition-overlay.active {
  opacity: 1;
}

/* Theme transition logo */
.theme-transition-logo {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0) rotate(-15deg);
  width: 150px;
  height: auto;
  max-width: 150px;
  z-index: 9999;
  pointer-events: none;
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  filter: drop-shadow(0 0 20px rgba(0, 212, 170, 0.9)) 
          drop-shadow(0 0 40px rgba(102, 126, 234, 0.7))
          drop-shadow(0 0 60px rgba(255, 255, 255, 0.5));
  animation: none;
}

.theme-transition-logo.active {
  transform: translate(-50%, -50%) scale(1.2) rotate(0deg);
  opacity: 1;
  animation: logoPulse 0.5s ease-out;
}

@keyframes logoPulse {
  0% { 
    transform: translate(-50%, -50%) scale(0) rotate(-15deg); 
    opacity: 0;
  }
  50% { 
    transform: translate(-50%, -50%) scale(1.4) rotate(5deg); 
    opacity: 1;
  }
  100% { 
    transform: translate(-50%, -50%) scale(1.2) rotate(0deg); 
    opacity: 1;
  }
}

/* Ripple effect from center */
.theme-ripple {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(0, 212, 170, 0.7), rgba(102, 126, 234, 0.5));
  transform: translate(-50%, -50%) scale(0);
  pointer-events: none;
  z-index: 9997;
  opacity: 0;
}

.theme-ripple.active {
  animation: rippleExpand 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes rippleExpand {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) scale(300);
    opacity: 0;
  }
}

/* Light to Dark transition glow */
[data-md-color-scheme="slate"] .theme-transition-logo {
  filter: drop-shadow(0 0 30px rgba(100, 181, 246, 1)) drop-shadow(0 0 60px rgba(0, 229, 255, 0.8));
}

