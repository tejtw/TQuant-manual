  display: block;
  color: #2e7d32 !important;
  font-size: 1.1em;
  margin-top: 1.5em;
  margin-bottom: 0.5em;
}

/* Dark theme API docs */
[data-md-color-scheme="slate"] .md-typeset ul:has(> li > code:first-child) {
  background: linear-gradient(135deg, rgba(100, 181, 246, 0.08), rgba(100, 181, 246, 0.03));
