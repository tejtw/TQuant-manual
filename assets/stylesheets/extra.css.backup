  color: #ffffff !important;
}

[data-md-color-scheme="default"] .md-footer .md-icon svg,
[data-md-color-scheme="default"] .md-footer__button svg {
  fill: #ffffff !important;
  color: #ffffff !important;
}

/* === DARK THEME (slate scheme) - WHITE TEXT === */
[data-md-color-scheme="slate"] {
  --md-default-fg-color: #ffffff !important;
  --md-text-color: #ffffff !important;
  --md-typeset-color: #ffffff !important;
}

[data-md-color-scheme="slate"] .md-main,
[data-md-color-scheme="slate"] .md-main__inner,
[data-md-color-scheme="slate"] .md-content,
[data-md-color-scheme="slate"] .md-content__inner,
[data-md-color-scheme="slate"] .md-typeset {
